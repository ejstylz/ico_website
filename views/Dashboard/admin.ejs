<% layout('layouts/adminBoilerplate') -%>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row page_title">
            <div class="col-sm-6">
                <h4>USERS</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-3">
                    <div class="card-header">Users List</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 table_s1 " id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <!-- <th>ID</th> -->
                                        <th>Username</th>
                                        <th>User ID</th>
                                        <th>Email</th>
                                        <th>Tokens Owned</th>
                                        <th>Referral ID</th>
                                        <th>Referral Tokens</th>
                                        <th>ERC 20 Address</th>
                                        <th>Withdrawal Status</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <!-- <th>ID</th> -->
                                        <th>Username</th>
                                        <th>User ID</th>
                                        <th>Email</th>
                                        <th>Tokens Owned</th>
                                        <th>Referral ID</th>
                                        <th>Referral Tokens</th>
                                        <th>ERC 20 Address</th>
                                        <th>Withdrawal Status</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% users.forEach(function(user){ %>
                                    <tr>
                                        <!-- <td>1</td> -->
                                        <td><%= user.username %></td>
                                        <td><%= user._id %></td>
                                        <td><%= user.email %></td>
                                        <td><%= user.tokensOwned %></td>
                                        <td><%= user.referrer %></td>
                                        <td><%= user.referralTokens %></td>
                                        <td><%= user.tokenAddress %></td>
                                        <td><%= user.withdrawalStatus %></td>

                                        <td>
                                            <form class="delete-form" action="/admin/<%= user._id %>?_method=DELETE"
                                                method="POST">
                                                <input type="submit" class="btn btn-sm btn-danger" value="Delete">
                                            </form>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                            <button class="btn btn-primary" id="export">Export to CSV</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>