<% layout('layouts/buyBoilerplate') -%>

<div class="content-wrapper">
  <div class="container-fluid">
    <div class="row page_title">
      <div class="col-sm-6">
        <h4>Welcome <%= currentUser.username %></h4>
      </div>
      <div class="col-sm-6">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/">Home</a>
          </li>
          <li class="breadcrumb-item active">Dashboard</li>
        </ol>
      </div>
    </div>
    <div class="row">

      <div class="row col-md-12">
        <div class="col-md-12">
          <div class="card mb-4">
            <div class="card-header">Buy Token</div>
            <div class="card-wrap">
              <ul role="tablist" id="pills-tab" class="nav nav_tab">
                <li class="nav-item">
                  <a href="#tab1" data-toggle="tab" class="nav-link active">Buy With BTC</a>
                </li>
                <li class="nav-item">
                  <a href="#tab2" data-toggle="tab" class="nav-link">Buy With ETH</a>
                </li>
                <li class="nav-item">
                  <a href="#tab3" data-toggle="tab" class="nav-link">Buy With LTC</a>
                </li>
              </ul>

              <!-- BUY WITH BTC -->
              <div class="tab-content card-body">
                <div role="tabpanel" id="tab1" class="tab-pane fade show active">
                  <form action="/purchaseBtc" method="POST">

                    <div class="row">
                      <div class="form-group col-md-6">
                        <label class="col-form-label">Price</label>
                        <div class="input-group">
                          <input type="number" min="10" class="form-control" id="usdPrice1" name="price"
                            placeholder="Price">
                          <div class="input-group-append">
                            <span class="input-group-text p-0">
                              <select class="custom_select">
                                <option value="USD">USD</option>
                              </select>
                            </span>
                          </div>
                        </div>
                      </div>
                      <div class="form-group col-md-6">
                        <label class="col-form-label">Amount</label>
                        <div class="input-group">
                          <input type="number" class="form-control" id="cvbAmount1" name="amount" placeholder="Amount"
                            readonly>
                          <div class="input-group-append">
                            <span class="input-group-text p-0">
                              <select class="custom_select">
                                <option value="CVB">CVB</option>
                              </select>
                            </span>
                          </div>
                        </div>
                      </div>
                      <div class="form-group col-md-12">
                        <input class="btn btn-default" type="submit" value="Create Transaction">
                        <!-- <div class="pt-2 col-md-12">
                              <button class="btn btn-default">Buy Now</button>
                            </div> -->
                      </div>
                    </div>
                  </form>
                </div>

                <!-- BUY WITH ETH -->
                <div role="tabpane1" id="tab2" class="tab-pane fade ">
                  <form action="/purchaseEth" method="POST">

                    <div class="row">
                      <div class="form-group col-md-6">
                        <label class="col-form-label">Price</label>
                        <div class="input-group">
                          <input type="number" min="10" class="form-control" id="usdPrice2" name="price"
                            placeholder="Price">
                          <div class="input-group-append">
                            <span class="input-group-text p-0">
                              <select class="custom_select">
                                <option value="USD">USD</option>
                              </select>
                            </span>
                          </div>
                        </div>
                      </div>
                      <div class="form-group col-md-6">
                        <label class="col-form-label">Amount</label>
                        <div class="input-group">
                          <input type="number" class="form-control" id="cvbAmount2" name="amount" placeholder="Amount"
                            readonly>
                          <div class="input-group-append">
                            <span class="input-group-text p-0">
                              <select class="custom_select">
                                <option value="CVB">CVB</option>
                              </select>
                            </span>
                          </div>
                        </div>
                      </div>
                      <div class="form-group col-md-12">
                        <input class="btn btn-default" type="submit" value="Create Transaction">
                        <!-- <div class="pt-2 col-md-12">
                                <button class="btn btn-default">Buy Now</button>
                              </div> -->
                      </div>
                    </div>
                  </form>
                </div>

                <!-- BUY WITH LTC -->
                <div role="tabpanel" id="tab3" class="tab-pane fade">
                  <form action="/purchaseLtc" method="POST">

                    <div class="row">
                      <div class="form-group col-md-6">
                        <label class="col-form-label">Price</label>
                        <div class="input-group">
                          <input type="number" min="10" class="form-control" id="usdPrice3" name="price"
                            placeholder="Price">
                          <div class="input-group-append">
                            <span class="input-group-text p-0">
                              <select class="custom_select">
                                <option value="USD">USD</option>
                              </select>
                            </span>
                          </div>
                        </div>
                      </div>
                      <div class="form-group col-md-6">
                        <label class="col-form-label">Amount</label>
                        <div class="input-group">
                          <input type="number" class="form-control" id="cvbAmount3" name="amount" placeholder="Amount"
                            readonly>
                          <div class="input-group-append">
                            <span class="input-group-text p-0">
                              <select class="custom_select">
                                <option value="CVB">CVB</option>
                              </select>
                            </span>
                          </div>
                        </div>
                      </div>
                      <div class="form-group col-md-12">
                        <input class="btn btn-default" type="submit" value="Create Transaction">
                        <!-- <div class="pt-2 col-md-12">
                                  <button class="btn btn-default">Buy Now</button>
                                </div> -->
                      </div>
                    </div>
                  </form>
                </div>
              </div>



            </div>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="card mb-4">
          <div class="card-header text_md_center">TOKEN BALANCE</div>
          <div class="card-body">
            <div class="row align-items-center text_md_center">
              <div class="col-xl-6 col-lg-12">
                <h5 class="text-muted small">Total Balance</h5>
                <h3 class="balance_text"><%= currentUser.tokensOwned.toFixed(4) %> CVB Tokens</h3>
              </div>
              <div class="col-xl-6 col-lg-12">
                <button class="btn btn-default" id="bttn">Withdraw</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>