<% layout('layouts/dashboardBoilerplate') -%>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row page_title">
            <div class="col-sm-6">
                <h4>Welcome <%= currentUser.username %></h4>
            </div>
            <div class="col-sm-6">
                <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/">Home</a>
                    </li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
        <div class="row">

            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-4">
                        <div class="card-header">Buy Token</div>
                        <div class="card-wrap">
                            <ul role="tablist" id="pills-tab" class="nav nav_tab">
                                <li class="nav-item">
                                    <a href="#tab1" data-toggle="tab" class="nav-link active">Buy</a>
                                </li>
                            </ul>
                            <form action="/purchase" method="POST">
                                <div class="tab-content card-body">
                                    <div role="tabpanel" id="tab1" class="tab-pane fade show active">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h5>Kindly pay <span><%= ltcPrice %></span> LTC into the address
                                                    below</h5>
                                            </div>

                                            <div class="form-group col-md-12 pt-2">
                                                <h6>Payment method</h6>
                                            </div>
                                            <div class="form-group col-md-12 text-center mb-0">
                                                <ul class="list_none p-0 payment_methods_list m-0">
                                                    <li class="active">
                                                        <a href="javascript:void(0);" data-tag="LTC"><i
                                                                class="cc LTC-alt"
                                                                title="LTC"></i><span>Litecoin</span></a>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="form-group col-md-12">
                                                <div id="LTC" class="payment_option d-block">
                                                    <h6 class="mb-2">Payment Address</h6>
                                                    <div class="copy-button">
                                                        <input type="text" name="address"
                                                            class="form-control copy_input" readonly=""
                                                            value="<%= ltcAddress %>" placeholder="<%= ltcAddress %>">
                                                        <span class="copy-link btn-default" data-toggle="tooltip"
                                                            title="Copy to Clipboard">Copy</span>
                                                    </div>
                                                </div>
                                                <br>
                                                <div>
                                                    <h5>Or scan the QR code below to purchase CVB tokens</h5>
                                                </div>
                                                <div><img src="<%= code %>" alt="QR code"></div>
                                                <div class="pt-2 col-md-12">
                                                    <button class="btn btn-default">Buy Now</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header text_md_center">TOKEN BALANCE</div>
                    <div class="card-body">
                        <div class="row align-items-center text_md_center">
                            <div class="col-xl-6 col-lg-12">
                                <h5 class="text-muted small">Total Balance</h5>
                                <h3 class="balance_text"><%= currentUser.tokensOwned.toFixed(4) %> CVB Tokens</h3>
                            </div>
                            <div class="col-xl-6 col-lg-12">
                                <button class="btn btn-default" id="bttn">Withdraw</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>