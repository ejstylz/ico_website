<% layout('layouts/referralBoilerplate') -%>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row page_title">
            <div class="col-sm-6">
                <h4>USERS</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-3">
                    <div class="card-header">Referral List</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 table_s1 " id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <!-- <th>ID</th> -->
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Tokens Owned</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <!-- <th>ID</th> -->
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Tokens Owned</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% users.forEach(function(user){ %>
                                    <tr>
                                        <!-- <td>1</td> -->
                                        <td><%= user.username %></td>
                                        <td><%= user.email %></td>
                                        <td><%= user.tokensOwned %></td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                            <!-- <button class="btn btn-primary" id="export">Export to CSV</button> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>