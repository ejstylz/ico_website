<% layout('layouts/dashboardBoilerplate') -%>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row page_title">
            <div class="col-sm-6">
                <h4>Welcome <%= currentUser.username %></h4>
            </div>
            <div class="col-sm-6">
                <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/">Home</a>
                    </li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header text_md_center">TOKEN BALANCE</div>
                <div class="card-body">
                    <div class="row align-items-center text_md_center">
                        <div class="col-xl-6 col-lg-12">
                            <h5 class="text-muted small">Total Balance</h5>
                            <h3 class="balance_text"><%= currentUser.tokensOwned.toFixed(4) %> CVB Tokens</h3>
                        </div>
                        <div class="col-xl-6 col-lg-12">
                            <button class="btn btn-default" id="bttn">Withdraw</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-content card-body">
                <div role="tabpanel" id="tab1" class="tab-pane fade show active">
                    <form action="/transfer" method="POST">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label class="col-form-label">CVB Amount</label>
                                <div class="input-group">
                                    <input type="number" min="1" class="form-control" id="amountOfCvb" name="amount"
                                        placeholder="Amount of CVB to transfer">
                                    <div class="input-group-append">
                                        <span class="input-group-text p-0">
                                            <select class="custom_select">
                                                <option value="CVB">CVB</option>
                                            </select>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="col-form-label">User Email</label>
                                <div class="input-group">
                                    <input type="email" class="form-control" id="emailToSendTo" name="otherEmail"
                                        placeholder="User Email">
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <input class="btn btn-default" type="submit" value="Send Tokens">
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
</div>