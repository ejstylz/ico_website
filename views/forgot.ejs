<% layout('layouts/loginBoilerplate') -%>

<!-- START SECTION LOGIN -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="authorize_box">
                    <div class="title_default_dark title_border text-center">
                        <h4 class="animation" data-animation="fadeInUp" data-animation-delay="0.2s">Clevebet ICO</h4>
                        <p class="animation" data-animation="fadeInUp" data-animation-delay="0.4s">
                            <strong>Forgot Password</strong></p>
                        <p>A link to reset your password will be sent to your email. Check in Your spam folder also</p>
                    </div>
                    <div class="field_form authorize_form">
                        <form action="/forgot-password?_method=PUT" method="POST">
                            <div class="form-group col-md-12 animation" data-animation="fadeInUp"
                                data-animation-delay="0.6s">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" required=""
                                    placeholder="Email Address" name="email" autofocus>
                            </div>
                            <div class="form-group col-md-12 text-center animation" data-animation="fadeInUp"
                                data-animation-delay="0.7s">
                                <button class="btn btn-default btn-radius" type="submit">Reset Password</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="divider small_divider"></div>
                <div class="text-center">
                    <span class="animation" data-animation="fadeInUp" data-animation-delay="0.8s">Don't have an
                        account?<a href="/sign-up"> Sign Up </a></span>
                </div>
            </div>
        </div>
    </div>
</section>